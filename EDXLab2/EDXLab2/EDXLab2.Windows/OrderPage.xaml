<Page
    x:Class="EDXLab2.OrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EDXLab2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="30" Margin="596,262,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="224"/>
        <TextBlock x:Name="textBlock_Copy" Height="30" Margin="0,252,252,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" HorizontalAlignment="Right" Width="224"/>
        <Button x:Name="button" Content="Add to Order" HorizontalAlignment="Left" Margin="86,0,0,78" VerticalAlignment="Bottom" Width="384" Height="90"/>
        <Button x:Name="button_Copy" Content="Submit Order" HorizontalAlignment="Right" Margin="0,0,95,78" VerticalAlignment="Bottom" Width="384" Height="90"/>
        <AppBar Opened="AppBar_Opened" Height="98" VerticalAlignment="Top">
            <AppBarButton Click="appBarButton_Click" x:Name="appBarButton" Icon="Home" Label="Home"/>
        </AppBar>

    </Grid>
</Page>
